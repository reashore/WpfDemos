<Window x:Class="WpfCanvasDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <Rectangle Width="50" Height="50" Fill="Red" Canvas.Left="25" Canvas.Top="25"/>
        <Rectangle Width="50" Height="50" Fill="Orange" Canvas.Left="100" Canvas.Top="25"/>
        <Rectangle Width="50" Height="50" Fill="Blue" Canvas.Left="125" Canvas.Top="40"/>
        <Ellipse Width="50" Height="50" Fill="Green" Canvas.Left="25" Canvas.Top="150"/>
    </Canvas>
</Window>
